@model Entities.Gift
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@*Husk Tag helper linien oven over !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*@

@{
    ViewData["Title"] = "Create";
}


<h2>Create</h2>

<h4>Gift</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-method="Post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />@Html.DisplayNameFor(model => model.Title)
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" /> @Html.DisplayNameFor(model => model.Description)
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" asp-for="BoyGift" /> @Html.DisplayNameFor(model => model.BoyGift)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" asp-for="GirlGift" /> @Html.DisplayNameFor(model => model.GirlGift)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
